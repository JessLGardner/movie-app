
<% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong>.
  <span><%= link_to "Logout", destroy_user_session_path, method: :delete %><span> |
  <span><%= link_to "Favorites", favorites_path  %></span> |
  <span><%= link_to  "Home", movies_path %></span> 
<% else %>
  <span><%= link_to "Sign up", new_user_registration_path %> </span> |
  <span><%= link_to "Login", new_user_session_path  %> </span> | 
  <span><%= link_to "Favorites", favorites_path  %></span> | 
  <span><%= link_to  "Home", movies_path %></span> 

<% end %>

<div class="movie">
<h1>Edit This Movie</h1>

<%= form_for @movie do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :genre %>:
  <%= f.text_field :genre %><br />

  <%= f.label :year %>:
  <%= f.text_field :year %><br />

  <%= f.label :synopsis %>: </br>
  <%= f.text_area :synopsis %><br />

  <%= f.label :picture %>:
  <%= f.text_field :picture %><br />

  <%= f.submit %>
<% end %>
</div>